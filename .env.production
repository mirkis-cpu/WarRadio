# RadioWar Production Environment
# Copy to server and fill in values

# --- Engine ---
ENGINE_PORT=3001
DATABASE_PATH=/app/data/radiowar.db
MEDIA_DIR=/app/media
SESSION_PATH=/app/data/sessions/storageState.json
LOG_LEVEL=info

# --- Suno ---
SUNO_HEADLESS=true
SUNO_CAPTCHA_MODE=skip

# --- YouTube Stream ---
YOUTUBE_RTMP_URL=rtmp://a.rtmp.youtube.com/live2
YOUTUBE_STREAM_KEY=

# --- Podcast ---
PODCAST_ENABLED=true
PODCAST_VOICE=en-US-GuyNeural
PODCAST_INTERVAL_MS=14400000
PODCAST_TARGET_MINUTES=7

# --- Docker/Linux ---
FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf
CORS_ORIGINS=http://localhost:3000,http://dashboard:3000
